@model List<WebSiteLKDT.Models.ChiTietDonHang>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Chitietdonhang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main">
	<div class="container padding-bottom-3x mb-1">
		<!-- Shopping Cart-->
		<div class="table-responsive shopping-cart">
			<h2>Chi tiết đơn hàng </h2>

			<table class="table">
				<thead>
					<tr>
						<th>Mã sản phẩm</th>
						<th>Số lượng</th>
						<th>Đơn giá</th>
						<th>Thành tiền</th>

					</tr>
				</thead>
				<tbody>
					@foreach (var chiTiet in Model)
					{
						<tr>
							<td>@chiTiet.MaSanPham</td>
							<td>@chiTiet.SoLuong</td>
							<td>@chiTiet.DonGia</td>
							<td>@chiTiet.ThanhTien</td>

						</tr>
					}
				</tbody>
			</table>

		</div>
		<div class="shopping-cart-footer">
			<div class="column text-lg">Tổng tiền: @Model.Sum(p => p.ThanhTien)$ <span class="text-medium"></span></div>
		</div>
		<div class="shopping-cart-footer">
			<div class="column"><a class="btn btn-outline-secondary" asp-action="Donhang" asp-controller="Admin"><i class="icon-arrow-left"></i>&nbsp;Trở lại</a></div>

		</div>
	</div>
</div>