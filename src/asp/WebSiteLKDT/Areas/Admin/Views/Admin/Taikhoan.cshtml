@model IEnumerable<WebSiteLKDT.Models.LbUser>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Taikhoan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh sách tài khoản</h1>


<table class="table">
    <div class="row">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                Họ tên
            </th>
            <th>
               Địa chỉ Email
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
               Điện thoại
            </th>
            <th>
                Quyền
            </th>
            <th>
                Ngày tạo tài khoản
            </th>
            <th>
                Trạng thái
            </th>
          
            <th></th>
        </tr>
    </thead>
    
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
             <td>
                 @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayTao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
       
            <td>
                <a asp-action="Suataikhoan" asp-route-id="@item.MaUser">Sửa</a> |
                
                <a asp-action="Xoataikhoan" asp-route-id="@item.MaUser">Xóa</a>
            </td>
        </tr>
}
    </tbody>
    </div>
</table>
<button class="btn btn-primary">
    <a asp-action="Themtaikhoan" style="color: white;">Tạo mới tài khoản</a>
</button>